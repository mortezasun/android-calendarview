<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_row"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:gravity="center_horizontal|center_vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:foregroundGravity="center_vertical|center_horizontal">


    <TextView
        android:id="@+id/text_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first"
        android:gravity="center_horizontal|center_vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"

         />
    <View
        android:id="@+id/img_row_start_top"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:contentDescription="@string/first"
        android:background="@color/purple_700"
        android:layout_gravity="start|top"
        android:visibility="gone"

        />
    <View
        android:id="@+id/img_row_end_top"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:contentDescription="@string/first"
        android:background="@color/purple_700"
        android:layout_gravity="end|top"
        android:visibility="gone"

        />
    <View
        android:id="@+id/img_row_start_bottom"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:contentDescription="@string/first"
        android:background="@color/purple_700"
        android:layout_gravity="start|bottom"
        android:visibility="gone"

        />
    <View
        android:id="@+id/img_row_end_bottom"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:contentDescription="@string/first"
        android:background="@color/purple_700"
        android:layout_gravity="end|bottom"

        android:visibility="gone"
        />
</FrameLayout>